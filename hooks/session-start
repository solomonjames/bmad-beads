#!/usr/bin/env bash
# SessionStart hook for bmad plugin

set -euo pipefail

# Determine plugin root directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]:-$0}")" && pwd)"
PLUGIN_ROOT="$(cd "${SCRIPT_DIR}/.." && pwd)"

# Read using-bmad content
using_bmad_content=$(cat "${PLUGIN_ROOT}/skills/using-bmad/SKILL.md" 2>&1 || echo "Error reading using-bmad skill")

# Escape string for JSON embedding using bash parameter substitution.
escape_for_json() {
    local s="$1"
    s="${s//\\/\\\\}"
    s="${s//\"/\\\"}"
    s="${s//$'\n'/\\n}"
    s="${s//$'\r'/\\r}"
    s="${s//$'\t'/\\t}"
    printf '%s' "$s"
}

using_bmad_escaped=$(escape_for_json "$using_bmad_content")
session_context="<EXTREMELY_IMPORTANT>\nYou have BMAD methodology skills available.\n\n**Below is the full content of your 'bmad:using-bmad' skill - your guide to BMAD methodology skills. For all other skills, use the 'Skill' tool:**\n\n${using_bmad_escaped}\n</EXTREMELY_IMPORTANT>"

# Output context injection as JSON.
# Keep both shapes for compatibility:
# - Cursor hooks expect additional_context.
# - Claude hooks expect hookSpecificOutput.additionalContext.
cat <<EOF
{
  "additional_context": "${session_context}",
  "hookSpecificOutput": {
    "hookEventName": "SessionStart",
    "additionalContext": "${session_context}"
  }
}
EOF

exit 0
